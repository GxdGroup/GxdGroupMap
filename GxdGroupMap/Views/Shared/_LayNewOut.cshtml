<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/globle.css" rel="stylesheet" />
    
    @RenderSection("self_css", required: false)
</head>
<body>
    <div class="main">
        <div class="header">
            <div class="h_bar">
                <div id="h_bar_right">
                    <ul>
                        <li class="item"><a>登陆</a></li>
                        <li class="line"></li>
                        <li class="item"><a>反馈意见</a></li>
                        <li class="line"></li>
                        <li class="item"><a>帮助</a></li>
                    </ul>
                </div>
            </div>
            <div class="h_top">
                <div id="logo">
                    <a>数据中心</a>
                </div>
                <div id="h_top_search">
                    <div class="search radius6">
                        <div name="searchform">
                            <input name='ecmsfrom' type='hidden' value='9'>
                            <input type="hidden" name="show" value="title,newstext">
                            <select name="classid" id="choose">
                                <option value="1">房产小区</option>
                                <option value="4">百度百科</option>
                                <option value="22">文献资料</option>
                            </select>
                            <input class="inp_srh" name="keyboard" placeholder="请输入您要搜索的内容">
                            <input class="btn_srh" type="button" name="submit" value="搜索">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="contenter">
            @RenderBody()
        </div>
        <script src="~/JavaScript/lib/jquery-1.8.3.min.js"></script>
        <script src="~/JavaScript/lib/jquery.select.js"></script>

        <script src="~/JavaScript/lib/require.js"></script>
        @RenderSection("require_js_module", required: false)
    </div>
</body>
</html>
